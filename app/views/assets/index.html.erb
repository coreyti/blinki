<h1>Assets</h1>
 
<table>
  <tr>
    <th>Title</th>
    <th colspan="3">Actions</th>
  </tr>
 
<% @assets.each do |asset| %>
  <tr>
    <td><%=h asset.title %></td>
 
    <td><%= link_to 'Show', resource(asset) %></td>
    <td><%= link_to 'Edit', resource(asset, :edit) %></td>
    <td><%= delete_button(asset, "Delete #{asset.title}") %></td>
  </tr>
<% end %>
</table>
 
<%= link_to 'New', resource(:assets, :new) %>

